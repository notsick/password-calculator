<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="200dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/master_info"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/masterInfo"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:singleLine="true"/>

            <ImageButton
                android:id="@+id/visible"
                android:layout_gravity="center|right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/key_name"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/key"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="@string/content_name"
                android:textSize="14sp"
                android:gravity="right"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>

            <RadioGroup
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/onlyDigit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/only_digit"/>
                <RadioButton
                    android:id="@+id/digitLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/digit_letter"/>
                <RadioButton
                    android:id="@+id/withSpecChar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/digit_letter_spec"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="@string/figure_name"
                android:textSize="14sp"
                android:gravity="right"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>

            <RadioGroup
                android:id="@+id/figure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/six_content"/>
                <RadioButton
                    android:id="@+id/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eight_content"/>
                <RadioButton
                    android:id="@+id/twelve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/twelve_content"/>
                <RadioButton
                    android:id="@+id/sixteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/sixteen_content"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="right"
                android:text="@string/ret_name"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/result"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="@string/ret_content"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:enabled="true"
                android:textIsSelectable="true"
                android:focusable="true"
                android:longClickable="true"
                android:textColor="@color/green"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/compute"
                android:text="@string/btn_compute_name"
                android:textColor="@color/black"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/layout_border"/>

            <Button
                android:id="@+id/copy"
                android:text="@string/btn_copy"
                android:textColor="@color/black"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/layout_border"/>
        </LinearLayout>

</LinearLayout>